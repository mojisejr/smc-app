{
  "private": true,
  "name": "smc",
  "description": "Smart Medication Cart Version 1",
  "version": "1.0.0",
  "author": "Nonthasak.l <nonthasak.l@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "dev:ds12": "cross-env DEVICE_TYPE=DS12 nextron",
    "dev:ds16": "cross-env DEVICE_TYPE=DS16 nextron",
    "build": "nextron build",
    "build:ds12": "cross-env DEVICE_TYPE=DS12 nextron build --publish=never",
    "build:ds12:linux": "cross-env DEVICE_TYPE=DS12 nextron build --linux --publish=never",
    "build:ds12:win": "cross-env DEVICE_TYPE=DS12 nextron build --win --x64 --publish=never",
    "build:ds16": "cross-env DEVICE_TYPE=DS16 nextron build --publish=never",
    "build:ds16:linux": "cross-env DEVICE_TYPE=DS16 nextron build --linux --publish=never",
    "build:ds16:win": "cross-env DEVICE_TYPE=DS16 nextron build --win --x64 --publish=never",
    "build:linux": "nextron build --linux",
    "build:win63": "nextron build --win --x64",
    "config:validate": "npx ts-node scripts/validate-build-config.ts",
    "config:ds12": "cp config/build/ds12.env .env && echo 'DS12 configuration loaded'",
    "config:ds16": "cp config/build/ds16.env .env && echo 'DS16 configuration loaded'",
    "postinstall": "electron-builder install-app-deps",
    "tscript:ds12": "npx ts-node scripts/test-ds12-hardware.js /dev/tty.useserial-AM10MY6R2 0x00",
    "test": "jest",
    "test:ds12": "jest tests/controllers/DS12Controller.test.ts",
    "test:integration": "jest tests/integration/",
    "test:hardware": "npx ts-node scripts/test-ds12-hardware.ts",
    "test:hardware:js": "node scripts/test-ds12-hardware.js",
    "test:dispensing-workflow": "npx ts-node scripts/test-dispensing-workflow.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:manual": "npx ts-node scripts/phase4-1-validation/manual-test.ts",
    "validate:phase4-1": "npx ts-node scripts/phase4-1-validation/validate-implementation.ts",
    "validate:build-time": "npx ts-node scripts/phase4-1-validation/validate-build-time-config.ts"
  },
  "build": {
    "linux": {
      "synopsis": "SMC",
      "description": "SMC",
      "category": "SMC",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64",
            "armv7l"
          ]
        }
      ]
    },
    "publish": null,
    "extraResources": [
      {
        "from": "resources/db/database.db",
        "to": "db/database.db"
      }
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@serialport/parser-byte-length": "^12.0.0",
    "@serialport/parser-packet-length": "^12.0.0",
    "axios": "^1.4.0",
    "daisyui": "^3.7.4",
    "dotenv": "^16.3.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.16",
    "mqtt": "^5.0.5",
    "react-hook-form": "^7.44.3",
    "react-icons": "^4.9.0",
    "react-toastify": "^9.1.3",
    "sequelize": "^6.37.3",
    "serialport": "^12.0.0",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.2.5",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "jest": "^29.7.0",
    "next": "^12.3.4",
    "nextron": "^8.5.0",
    "postcss": "^8.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.1.0"
  }
}
