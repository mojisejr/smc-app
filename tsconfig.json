{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@main/*": ["./main/*"],
      "@db/*": ["./db/*"],
      "@tests/*": ["./tests/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "main/**/*",
    "scripts/**/*",
    "tests/**/*",
    "db/**/*",
    "renderer/**/*",
    "check-license-vs-database.js"
  ],
  "exclude": ["node_modules", "renderer/next.config.js", "app", "dist"],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020"
    }
  }
}
